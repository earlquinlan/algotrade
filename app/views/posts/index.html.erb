<br>
<h2><strong>Blog Posts:</strong></h2>
<br>
<!-- Only use = when there is an output -->
<% @posts.each do |post| %>
  <div class="card card-body bg-light">
    <h3><%= post.title %></h3>
    <p><%= post.body %></p>
    <%= link_to "Read More", post_path(post), :class => 'btn btn-default' %>
  </div>
  <br>
<% end %>

